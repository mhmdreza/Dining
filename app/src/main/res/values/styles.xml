<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="fontFamily">@font/iran_sans</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/splash</item>
        <item name="colorPrimaryDark">@color/splash</item>
        <item name="colorAccent">@color/splash</item>
        <item name="colorControlNormal">@color/splash</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="BlackTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:windowDisablePreview">true</item>
    </style>


    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/iron</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="buttonStyle" parent="@android:style/Widget.Button.Small">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:windowDisablePreview">true</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TransparentText">
        <item name="android:textColor">@color/transparent_white</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#18030A</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#263238</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/edittext_floating</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="DialogTheme" parent="Base.Theme.AppCompat.Dialog">
        <item name="colorPrimary">#18030A</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#263238</item>
        <item name="android:gravity">right</item>
        <item name="actionMenuTextColor">@color/colorPrimaryDark</item>
        <item name="android:textAlignment">center</item>

    </style>


    <style name="TextAppearance.Shrine.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Shrine.TextInputLayout.HintText</item>
        <item name="android:textColorHint">#424242</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/text_box_stroke_color</item>
    </style>

    <style name="MaterialComponents.MaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/RoundedDialog</item>
    </style>

    <style name="RoundedDialog">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="Widget.Gharar.TextView.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/iran_sans</item>
        <item name="android:textColor">#757575</item>
    </style>


    <style name="Widget.Button.Primary" parent="Widget.Button.TextButton">
        <item name="backgroundTint">@color/color_background_button_primary</item>
        <item name="iconTint">@android:color/white</item>
        <item name="iconTintMode">src_in</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_text_button_primary</item>
    </style>

    <style name="Widget.Button.Secondary" parent="Widget.Button.TextButton">
        <item name="android:gravity">center</item>
        <item name="background">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
    </style>


    <style name="Widget.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textColor">@color/color_text_button</item>
        <item name="android:textAppearance">@style/TextAppearance.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearanceSmallComponent</item>
        <item name="iconTint">@color/color_icon_button</item>
        <item name="iconTintMode">src_in</item>
    </style>

    <style name="TextAppearance.Button" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShapeAppearanceSmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>

</resources>
